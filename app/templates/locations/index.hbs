<h1>Locations list</h1>

<p>
  {{link-to "New Location" "locations.new" class='btn btn-primary'}}
</p>

{{#if model.length}}
  <table class="table table-striped">
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each location in model}}
        <tr>
          <td>
            <span class="btn btn-xs">{{location.name}}</span>
          </td>
          <td>
            {{link-to "Edit" "locations.edit" location class='btn btn-xs btn-info'}}
          </td>
          <td>
            {{link-to "Show" "locations.show" location class='btn btn-xs btn-default'}}
          </td>
          <td>
            <a href="#" {{action "remove" location}} class='btn btn-xs btn-danger'>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Locations found
  </p>
{{/if}}
