<h1>Meetings list</h1>

<p>
  {{link-to "New Meeting" "meetings.new" }}
</p>

{{#if model.length}}
  <table>
    <thead>
      <tr>
        <th>
          Date
        </th>
        <th>
          Location
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each meeting in model}}
        <tr>
          <td>
            {{meeting.date}}
          </td>
          <td>
            {{meeting.location.name}}
          </td>
          <td>
            {{link-to "Edit" "meetings.edit" meeting.id}}
          </td>
          <td>
            {{link-to "Show" "meetings.show" meeting}}
          </td>
          <td>
            <a href="#" {{action "remove" meeting}}>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Meetings found
  </p>
{{/if}}
