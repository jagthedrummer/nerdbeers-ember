<h1>Meetings list</h1>

<p>
  {{link-to "New Meeting" "meetings.new" class='btn btn-primary'}}
</p>

{{#if model.length}}
  <table class="table table-striped">
    <thead>
      <tr>
        <th>
          Date
        </th>
        <th>
          Location
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each meeting in model}}
        <tr>
          <td>
            {{meeting.date}}
          </td>
          <td>
            {{meeting.location.name}}
          </td>
          <td>
            {{link-to "Edit" "meetings.edit" meeting.id class='btn btn-xs btn-info'}}
          </td>
          <td>
            {{link-to "Show" "meetings.show" meeting class='btn btn-xs btn-default'}}
          </td>
          <td>
            <a href="#" {{action "remove" meeting}} class='btn btn-xs btn-danger'>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Meetings found
  </p>
{{/if}}
